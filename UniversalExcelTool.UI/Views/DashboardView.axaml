<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:UniversalExcelTool.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="750"
             x:Class="UniversalExcelTool.UI.Views.DashboardView"
             x:DataType="vm:DashboardViewModel"
             Background="#FAFBFC">

    <Design.DataContext>
        <vm:DashboardViewModel/>
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Margin="20,15,20,20">

            <!-- Status Cards with Enhanced Design -->
            <Grid ColumnDefinitions="*,*,*" 
                  Margin="0,0,0,15">
                
                <!-- Database Status Card -->
                <Border Grid.Column="0" 
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        BoxShadow="0 1 3 0 #0000001A"
                        Margin="0,0,8,0">
                    <StackPanel Spacing="14">
                        <!-- Icon and Label -->
                        <StackPanel Spacing="10">
                            <Border Background="#EEF2FF" 
                                    CornerRadius="6" 
                                    Width="40" 
                                    Height="40"
                                    HorizontalAlignment="Left">
                                <TextBlock Text="ðŸ’¾" 
                                           FontSize="20" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Top" Spacing="2">
                                <TextBlock Text="Database Status" 
                                           FontSize="12" 
                                           FontWeight="Medium"
                                           Foreground="#6B7280"/>
                                <TextBlock Text="{Binding DatabaseStatus}" 
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="#000000"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis"
                                           MaxLines="1"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Action Button -->
                        <Button Command="{Binding CheckDatabaseConnectionCommand}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Height="36"
                                Background="#007991"
                                Foreground="White"
                                BorderThickness="0"
                                CornerRadius="6"
                                FontSize="12"
                                FontWeight="Medium"
                                Padding="12,0"
                                Cursor="Hand">
                            <TextBlock Text="Check Connection"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#78ffd6"/>
                                </Style>
                                <Style Selector="Button:pressed">
                                    <Setter Property="Background" Value="#4dd0ba"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Quick Actions Card (Run ETL) -->
                <Border Grid.Column="1" 
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        BoxShadow="0 1 3 0 #0000001A"
                        Margin="0,0,8,0">
                    <StackPanel Spacing="14">
                        <!-- Icon and Label -->
                        <StackPanel Spacing="10">
                            <Border Background="#DCFCE7" 
                                    CornerRadius="6" 
                                    Width="40" 
                                    Height="40"
                                    HorizontalAlignment="Left">
                                <TextBlock Text="ðŸš€" 
                                           FontSize="20" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Top" Spacing="2">
                                <TextBlock Text="Quick Actions" 
                                           FontSize="12" 
                                           FontWeight="Medium"
                                           Foreground="#6B7280"/>
                                <TextBlock Text="ETL Pipeline" 
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="#1A1A1A"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis"
                                           MaxLines="1"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Operation Status -->
                        <Border IsVisible="{Binding IsOperationRunning}"
                                Background="#FEF3C7"
                                BorderBrush="#F59E0B"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="10,8"
                                Margin="0,0,0,8">
                            <TextBlock Text="{Binding OperationStatusMessage}"
                                       FontSize="11"
                                       Foreground="#92400E"
                                       TextWrapping="Wrap"/>
                        </Border>
                        
                        <!-- Action Buttons -->
                        <Grid ColumnDefinitions="*,Auto">
                            <Button Grid.Column="0"
                                    Command="{Binding RunCompleteETLCommand}"
                                    IsEnabled="{Binding CanRunOperation}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Height="36"
                                    Background="#10B981"
                                    Foreground="White"
                                    BorderThickness="0"
                                    CornerRadius="6"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    Padding="12,0"
                                    Margin="0,0,8,0"
                                    Cursor="Hand">
                                <TextBlock Text="Run Complete ETL"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                <Button.Styles>
                                    <Style Selector="Button:pointerover">
                                        <Setter Property="Background" Value="#059669"/>
                                    </Style>
                                    <Style Selector="Button:pressed">
                                        <Setter Property="Background" Value="#047857"/>
                                    </Style>
                                    <Style Selector="Button:disabled">
                                        <Setter Property="Background" Value="#D1D5DB"/>
                                        <Setter Property="Foreground" Value="#9CA3AF"/>
                                    </Style>
                                </Button.Styles>
                            </Button>
                            
                            <Button Grid.Column="1"
                                    Command="{Binding CancelOperationCommand}"
                                    IsVisible="{Binding CanCancelOperation}"
                                    HorizontalAlignment="Right"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Width="36"
                                    Height="36"
                                    Background="#EF4444"
                                    Foreground="White"
                                    BorderThickness="0"
                                    CornerRadius="6"
                                    FontSize="14"
                                    Padding="0"
                                    ToolTip.Tip="Cancel Operation"
                                    Cursor="Hand">
                                <TextBlock Text="âœ•"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                <Button.Styles>
                                    <Style Selector="Button:pointerover">
                                        <Setter Property="Background" Value="#DC2626"/>
                                    </Style>
                                    <Style Selector="Button:pressed">
                                        <Setter Property="Background" Value="#B91C1C"/>
                                    </Style>
                                </Button.Styles>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Last Execution Card -->
                <Border Grid.Column="2" 
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        BoxShadow="0 1 3 0 #0000001A">
                    <StackPanel Spacing="14">
                        <!-- Icon and Label -->
                        <StackPanel Spacing="10">
                            <Border Background="#FEF3C7" 
                                    CornerRadius="6" 
                                    Width="40" 
                                    Height="40"
                                    HorizontalAlignment="Left">
                                <TextBlock Text="â±ï¸" 
                                           FontSize="20" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Top" Spacing="2">
                                <TextBlock Text="Last Execution" 
                                           FontSize="12" 
                                           FontWeight="Medium"
                                           Foreground="#6B7280"/>
                                <TextBlock Text="{Binding LastExecutionInfo}" 
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#1A1A1A"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis"
                                           MaxLines="2"
                                           LineHeight="18"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Info Text -->
                        <TextBlock Text="Last run timestamp will appear here"
                                   FontSize="11"
                                   Foreground="#9CA3AF"
                                   TextWrapping="Wrap"
                                   TextTrimming="CharacterEllipsis"
                                   MaxLines="2"
                                   LineHeight="16"/>
                    </StackPanel>
                </Border>

            </Grid>

            <!-- Live Log Viewer -->
            <Border Background="White"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="0"
                    BoxShadow="0 1 3 0 #0000001A"
                    Margin="0,0,0,0">
                <Grid RowDefinitions="Auto,*">
                    <!-- Section Header with Clear Button -->
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="15,10,15,10">
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Live Log" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="#1A1A1A"
                                       Margin="0,0,0,2"/>
                            <TextBlock Text="Real-time activity monitoring"
                                       FontSize="12"
                                       Foreground="#6B7280"/>
                        </StackPanel>
                        <Button Grid.Column="1" 
                                Command="{Binding ClearLogsCommand}"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Height="32"
                                MinWidth="90"
                                Padding="16,0"
                                Background="#F9FAFB"
                                Foreground="#374151"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                CornerRadius="6"
                                FontSize="12"
                                FontWeight="Medium"
                                Cursor="Hand">
                            <TextBlock Text="Clear Logs"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#F3F4F6"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                    </Grid>

                    <!-- Log Table -->
                    <Border Grid.Row="1" 
                            BorderBrush="#E5E7EB"
                            BorderThickness="0,1,0,0"
                            Background="#FAFBFC"
                            CornerRadius="0,0,8,8"
                            Height="340">
                        <Grid RowDefinitions="Auto,*">
                            <!-- Table Header -->
                            <Border Grid.Row="0" 
                                    Background="#F3F4F6" 
                                    BorderBrush="#E5E7EB" 
                                    BorderThickness="0,0,0,1" 
                                    Padding="16,10">
                                <Grid ColumnDefinitions="50,90,*">
                                    <TextBlock Grid.Column="0" Text="Type" FontWeight="SemiBold" FontSize="12" Foreground="#4B5563"/>
                                    <TextBlock Grid.Column="1" Text="Time" FontWeight="SemiBold" FontSize="12" Foreground="#4B5563"/>
                                    <TextBlock Grid.Column="2" Text="Message" FontWeight="SemiBold" FontSize="12" Foreground="#4B5563"/>
                                </Grid>
                            </Border>

                            <!-- Log Entries -->
                            <ScrollViewer Grid.Row="1" Padding="0">
                                <ItemsControl ItemsSource="{Binding LogEntries}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="16,10"
                                                    BorderBrush="#F3F4F6"
                                                    BorderThickness="0,0,0,1"
                                                    Background="Transparent">
                                                <Border.Styles>
                                                    <Style Selector="Border:pointerover">
                                                        <Setter Property="Background" Value="#F9FAFB"/>
                                                    </Style>
                                                </Border.Styles>
                                                <Grid ColumnDefinitions="50,90,*">
                                                    <!-- Icon -->
                                                    <Border Grid.Column="0" 
                                                            Width="28" Height="28" 
                                                            CornerRadius="14"
                                                            Background="#F3F4F6"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Icon}"
                                                                   FontSize="14"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                    
                                                    <!-- Timestamp -->
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding Timestamp, StringFormat='HH:mm:ss'}"
                                                               FontSize="12"
                                                               FontFamily="Cascadia Code, Consolas, monospace"
                                                               FontWeight="Medium"
                                                               Foreground="#6B7280"
                                                               VerticalAlignment="Center"/>
                                                    
                                                    <!-- Message -->
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding Message}"
                                                               FontSize="13"
                                                               FontWeight="Normal"
                                                               Foreground="#111827"
                                                               TextWrapping="Wrap"
                                                               VerticalAlignment="Center"
                                                               LineHeight="20"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>

</UserControl>


