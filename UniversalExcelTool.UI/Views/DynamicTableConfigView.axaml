<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:UniversalExcelTool.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="950" d:DesignHeight="700"
             x:Class="UniversalExcelTool.UI.Views.DynamicTableConfigView"
             x:DataType="vm:DynamicTableConfigViewModel">

    <Design.DataContext>
        <vm:DynamicTableConfigViewModel/>
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Margin="28,20,28,28">

            <!-- Status Message -->
            <Border Background="#f5e6f0" 
                    BorderBrush="#78ffd6"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12,10"
                    Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="✓" 
                               FontSize="14"
                               Foreground="#0C5460"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="13"
                               FontWeight="Medium"
                               Foreground="#0C5460"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Wizard Steps in 2-Column Grid Layout -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto">
                    
                <!-- Step 1: Temporary Table (Left Column) -->
                <Border Grid.Column="0" Grid.Row="0"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        BoxShadow="0 1 3 0 #0000001A"
                        Margin="0,0,8,0">
                    <StackPanel Spacing="14">
                        <!-- Step Header -->
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Border Background="#EEF2FF"
                                    CornerRadius="6"
                                    Width="32"
                                    Height="32"
                                    VerticalAlignment="Top">
                                <TextBlock Text="1" 
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#4F46E5"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Temporary Table Configuration" 
                                           FontSize="15" 
                                           FontWeight="SemiBold"
                                           Foreground="#1A1A1A"/>
                                <TextBlock Text="Enter the temporary table name for preloading and validating data:"
                                           FontSize="11"
                                           Foreground="#6B7280"
                                           TextWrapping="Wrap"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Input Field -->
                        <TextBox Text="{Binding TempTableName}"
                                 Watermark="e.g., Temp_MyData"
                                 HorizontalAlignment="Stretch"
                                 Height="36"
                                 FontSize="13"
                                 Margin="0,6,0,0"/>
                        
                        <!-- Info Text -->
                        <Border Background="#FEF3C7"
                                BorderBrush="#FCD34D"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="10,8"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="💡" 
                                           FontSize="14"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="This table will be used to validate and process data before moving to final destination."
                                           FontSize="11"
                                           Foreground="#92400E"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Action Button -->
                        <Button Command="{Binding Step1_NextCommand}"
                                HorizontalAlignment="Left"
                                Height="36"
                                Padding="16,0"
                                Background="#007991"
                                Foreground="White"
                                BorderThickness="0"
                                CornerRadius="6"
                                FontSize="13"
                                FontWeight="Medium"
                                Margin="0,6,0,0"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="▶" FontSize="11" VerticalAlignment="Center"/>
                                <TextBlock Text="Next: Check Destination Table" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#78ffd6"/>
                                </Style>
                                <Style Selector="Button:pressed">
                                    <Setter Property="Background" Value="#4dd0ba"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Step 2: Destination Table (Right Column) -->
                <Border Grid.Column="1" Grid.Row="0"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        BoxShadow="0 1 3 0 #0000001A"
                        Margin="8,0,0,0"
                        IsEnabled="{Binding IsStep2Enabled}"
                        Opacity="{Binding IsStep2Enabled, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <StackPanel Spacing="14">
                        <!-- Step Header -->
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Border Background="#EEF2FF"
                                    CornerRadius="6"
                                    Width="32"
                                    Height="32"
                                    VerticalAlignment="Top">
                                <TextBlock Text="2" 
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#4F46E5"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Destination Table Configuration" 
                                           FontSize="15" 
                                           FontWeight="SemiBold"
                                           Foreground="#1A1A1A"/>
                                <TextBlock Text="Enter the destination table name where final data will be stored:"
                                           FontSize="11"
                                           Foreground="#6B7280"
                                           TextWrapping="Wrap"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Input Field -->
                        <TextBox Text="{Binding DestinationTableName}"
                                 Watermark="e.g., MyDataTable"
                                 HorizontalAlignment="Stretch"
                                 Height="36"
                                 FontSize="13"
                                 Margin="0,6,0,0"/>
                        
                        <!-- Action Button -->
                        <Button Command="{Binding Step2_CheckTableCommand}"
                                HorizontalAlignment="Left"
                                Height="36"
                                Padding="16,0"
                                Background="#007991"
                                Foreground="White"
                                BorderThickness="0"
                                CornerRadius="6"
                                FontSize="13"
                                FontWeight="Medium"
                                Margin="0,6,0,0"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="🔍" FontSize="12" VerticalAlignment="Center"/>
                                <TextBlock Text="Check If Table Exists in Database" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#78ffd6"/>
                                </Style>
                                <Style Selector="Button:pressed">
                                    <Setter Property="Background" Value="#4dd0ba"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                        
                        <!-- Table Check Result -->
                        <Border IsVisible="{Binding TableCheckMessage.Length}"
                                Background="#F3F4F6"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,10"
                                Margin="0,6,0,0">
                            <TextBlock Text="{Binding TableCheckMessage}"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="#374151"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Step 3: Options Based on Table Existence (Full Width) -->
                <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        BoxShadow="0 1 3 0 #0000001A"
                        Margin="0,16,0,0"
                        IsEnabled="{Binding IsStep3Enabled}"
                        Opacity="{Binding IsStep3Enabled, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <StackPanel Spacing="14">
                        <!-- Step Header -->
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Border Background="#EEF2FF"
                                    CornerRadius="6"
                                    Width="32"
                                    Height="32"
                                    VerticalAlignment="Top">
                                <TextBlock Text="3" 
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#4F46E5"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Table Configuration Options" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="#1A1A1A"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Option A: Table Exists - Truncate -->
                        <StackPanel IsVisible="{Binding ShowTruncateOption}" Spacing="12" Margin="0,6,0,0">
                            <Border Background="#FEF3C7" 
                                    BorderBrush="#FCD34D"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="12,10">
                                <StackPanel Spacing="6">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="⚠️" FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Text="WARNING: Table Exists" 
                                                   FontSize="13" 
                                                   FontWeight="Bold" 
                                                   Foreground="#92400E"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding DestinationTableName, StringFormat='The table \'{0}\' already exists in your database.'}"
                                               FontSize="12"
                                               Foreground="#92400E"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="If you choose to truncate, ALL existing data will be permanently deleted before loading new data!"
                                               FontSize="11"
                                               Foreground="#92400E"
                                               FontWeight="SemiBold"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            
                            <CheckBox IsChecked="{Binding ShouldTruncate}"
                                      FontSize="13"
                                      Margin="4,0,0,0">
                                <TextBlock Text="Yes, truncate (delete all data from) the existing table before loading new data"
                                           FontSize="13"
                                           TextWrapping="Wrap"/>
                            </CheckBox>
                        </StackPanel>

                        <!-- Option B: Table Doesn't Exist - Create New -->
                        <StackPanel IsVisible="{Binding ShowCreateTableInfo}" Spacing="12" Margin="0,6,0,0">
                            <Border Background="#D1F2EB" 
                                    BorderBrush="#78ffd6"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="12,10">
                                <StackPanel Spacing="6">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="ℹ️" FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Text="Information: New Table Will Be Created" 
                                                   FontSize="13" 
                                                   FontWeight="Bold" 
                                                   Foreground="#0C5460"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding DestinationTableName, StringFormat='The table \'{0}\' does not exist in your database.'}"
                                               FontSize="12"
                                               Foreground="#0C5460"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="A new table will be automatically created with the same structure as your Excel data (all columns as NVARCHAR(MAX))."
                                               FontSize="11"
                                               Foreground="#0C5460"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            
                            <CheckBox IsChecked="{Binding CreateNewTable}"
                                      IsEnabled="False"
                                      FontSize="13"
                                      Margin="4,0,0,0">
                                <TextBlock Text="Create new table based on Excel data structure"
                                           FontSize="13"
                                           TextWrapping="Wrap"/>
                            </CheckBox>
                        </StackPanel>
                        
                        <!-- Complete Button -->
                        <Button Command="{Binding Step3_CompleteCommand}"
                                HorizontalAlignment="Left"
                                Height="36"
                                Padding="20,0"
                                Background="#10B981"
                                Foreground="White"
                                BorderThickness="0"
                                CornerRadius="6"
                                FontSize="13"
                                FontWeight="Medium"
                                Margin="0,6,0,0"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="✓" FontSize="13" VerticalAlignment="Center"/>
                                <TextBlock Text="Complete Configuration" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#059669"/>
                                </Style>
                                <Style Selector="Button:pressed">
                                    <Setter Property="Background" Value="#047857"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Action Buttons (Full Width) -->
                <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"
                            Orientation="Horizontal" 
                            Spacing="12"
                            HorizontalAlignment="Center"
                            Margin="0,16,0,0"
                            IsEnabled="{Binding ConfigurationComplete}">
                    <Button Command="{Binding SaveConfigurationCommand}"
                            Height="36"
                            Padding="16,0"
                            Background="#10B981"
                            Foreground="White"
                            BorderThickness="0"
                            CornerRadius="6"
                            FontSize="13"
                            FontWeight="Medium"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="💾" FontSize="12" VerticalAlignment="Center"/>
                            <TextBlock Text="Save Configuration" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#059669"/>
                            </Style>
                            <Style Selector="Button:pressed">
                                <Setter Property="Background" Value="#047857"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                    
                    <Button Command="{Binding ResetWizardCommand}"
                            Height="36"
                            Padding="16,0"
                            Background="#F3F4F6"
                            Foreground="#374151"
                            BorderBrush="#D1D5DB"
                            BorderThickness="1"
                            CornerRadius="6"
                            FontSize="13"
                            FontWeight="Medium"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="🔄" FontSize="12" VerticalAlignment="Center"/>
                            <TextBlock Text="Reset Wizard" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#E5E7EB"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                    
                    <Button Command="{Binding LoadExistingConfigurationCommand}"
                            Height="36"
                            Padding="16,0"
                            Background="#F3F4F6"
                            Foreground="#374151"
                            BorderBrush="#D1D5DB"
                            BorderThickness="1"
                            CornerRadius="6"
                            FontSize="13"
                            FontWeight="Medium"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="📂" FontSize="12" VerticalAlignment="Center"/>
                            <TextBlock Text="Load Existing" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#E5E7EB"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                </StackPanel>

            </Grid>

            <!-- Configuration Log (Full Width Below) -->
            <Border Background="White"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    BoxShadow="0 1 3 0 #0000001A"
                    Margin="0,20,0,0">
                <StackPanel>
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Configuration Log" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#1A1A1A"/>
                        <TextBlock Text="Track configuration changes and actions"
                                   FontSize="12"
                                   Foreground="#6B7280"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                    
                    <Border BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            CornerRadius="6"
                            Height="180"
                            Background="#FAFBFC">
                        <ScrollViewer Padding="10">
                            <ItemsControl ItemsSource="{Binding LogEntries}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="6,4"
                                                Margin="0,1"
                                                CornerRadius="4"
                                                Background="Transparent">
                                            <Border.Styles>
                                                <Style Selector="Border:pointerover">
                                                    <Setter Property="Background" Value="#F3F4F6"/>
                                                </Style>
                                            </Border.Styles>
                                            <Grid ColumnDefinitions="Auto,Auto,*">
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding Icon}"
                                                           FontSize="12"
                                                           Margin="0,0,8,0"
                                                           VerticalAlignment="Center"/>
                                                <Border Grid.Column="1"
                                                        Background="#E5E7EB"
                                                        CornerRadius="3"
                                                        Padding="5,1"
                                                        Margin="0,0,8,0">
                                                    <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm:ss'}"
                                                               FontSize="10"
                                                               FontFamily="Consolas"
                                                               FontWeight="Medium"
                                                               Foreground="#6B7280"/>
                                                </Border>
                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding Message}"
                                                           FontSize="12"
                                                           Foreground="#1A1A1A"
                                                           TextWrapping="Wrap"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>

</UserControl>


