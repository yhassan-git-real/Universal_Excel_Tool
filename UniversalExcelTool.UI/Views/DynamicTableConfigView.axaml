<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:UniversalExcelTool.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="950" d:DesignHeight="700"
             x:Class="UniversalExcelTool.UI.Views.DynamicTableConfigView"
             x:DataType="vm:DynamicTableConfigViewModel">

    <Design.DataContext>
        <vm:DynamicTableConfigViewModel/>
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Margin="24,16,24,24" MaxWidth="1200">

            <!-- Page Header -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Table Configuration" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="#1F2937"
                           Margin="0,0,0,2"/>
                <TextBlock Text="Configure and manage dynamic database tables" 
                           FontSize="12" 
                           Foreground="#6B7280"
                           Margin="0,0,0,12"/>
            </StackPanel>

            <!-- Status Message -->
            <Border Background="#E0F2FE" 
                    BorderBrush="#93C5FD"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="8,6"
                    Margin="0,0,0,12">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <Border Background="#3B82F6"
                            Width="14" Height="14"
                            CornerRadius="7"
                            VerticalAlignment="Center">
                        <TextBlock Text="âœ“" 
                                   FontSize="9"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="11"
                               FontWeight="Medium"
                               Foreground="#1E40AF"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Wizard Steps in 2-Column Grid Layout -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto">
                    
                <!-- Step 1: Temporary Table (Left Column) -->
                <Border Grid.Column="0" Grid.Row="0"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="12"
                        BoxShadow="0 1 2 0 #0000000A"
                        Margin="0,0,6,0">
                    <StackPanel Spacing="10">
                        <!-- Step Header -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="#6366F1"
                                    CornerRadius="6"
                                    Width="28"
                                    Height="28"
                                    VerticalAlignment="Top">
                                <TextBlock Text="1" 
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" Spacing="1">
                                <TextBlock Text="Temporary Table" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="#111827"/>
                                <TextBlock Text="Preloading &amp; validation staging table"
                                           FontSize="11"
                                           Foreground="#6B7280"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Input Field -->
                        <TextBox Text="{Binding TempTableName}"
                                 Watermark="e.g., Temp_MyData"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Height="32"
                                 MaxWidth="300"
                                 FontSize="12"
                                 Padding="10,0"
                                 CornerRadius="4"
                                 BorderThickness="1"
                                 BorderBrush="#D1D5DB"
                                 Margin="0,2,0,0">
                            <TextBox.Styles>
                                <Style Selector="TextBox:focus">
                                    <Setter Property="BorderBrush" Value="#6366F1"/>
                                </Style>
                            </TextBox.Styles>
                        </TextBox>
                        
                        <!-- Info Text -->
                        <Border Background="#FEF3C7"
                                BorderBrush="#FCD34D"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="6,5">
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Border Background="#F59E0B"
                                        Width="12" Height="12"
                                        CornerRadius="6"
                                        VerticalAlignment="Top"
                                        Margin="0,0,0,0">
                                    <TextBlock Text="i" 
                                               FontSize="8"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Validates and processes data before moving to final destination"
                                           FontSize="10"
                                           Foreground="#92400E"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"
                                           LineHeight="13"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Action Button -->
                        <Button Command="{Binding Step1_NextCommand}"
                                HorizontalAlignment="Left"
                                Height="30"
                                MinWidth="140"
                                Background="#007991"
                                Foreground="White"
                                BorderThickness="0"
                                CornerRadius="4"
                                FontSize="11"
                                FontWeight="Medium"
                                Padding="14,0"
                                Margin="0,0,0,0"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Center">
                                <TextBlock Text="â†’" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBlock Text="Next Step" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#00A8B5"/>
                                </Style>
                                <Style Selector="Button:pressed">
                                    <Setter Property="Background" Value="#006B7D"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Step 2: Destination Table (Right Column) -->
                <Border Grid.Column="1" Grid.Row="0"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="12"
                        BoxShadow="0 1 2 0 #0000000A"
                        Margin="6,0,0,0"
                        IsEnabled="{Binding IsStep2Enabled}">
                    <Border.Styles>
                        <Style Selector="Border:not(:disabled)">
                            <Setter Property="Opacity" Value="1"/>
                        </Style>
                        <Style Selector="Border:disabled">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Style>
                    </Border.Styles>
                    <StackPanel Spacing="10">
                        <!-- Step Header -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="#6366F1"
                                    CornerRadius="6"
                                    Width="28"
                                    Height="28"
                                    VerticalAlignment="Top">
                                <TextBlock Text="2" 
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" Spacing="1">
                                <TextBlock Text="Destination Table" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="#111827"/>
                                <TextBlock Text="Final data storage location"
                                           FontSize="11"
                                           Foreground="#6B7280"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Input Field -->
                        <TextBox Text="{Binding DestinationTableName}"
                                 Watermark="e.g., MyDataTable"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Height="32"
                                 MaxWidth="300"
                                 FontSize="12"
                                 Padding="10,0"
                                 CornerRadius="4"
                                 BorderThickness="1"
                                 BorderBrush="#D1D5DB"
                                 Margin="0,2,0,0">
                            <TextBox.Styles>
                                <Style Selector="TextBox:focus">
                                    <Setter Property="BorderBrush" Value="#6366F1"/>
                                </Style>
                            </TextBox.Styles>
                        </TextBox>
                        
                        <!-- Action Button -->
                        <Button Command="{Binding Step2_CheckTableCommand}"
                                HorizontalAlignment="Left"
                                Height="30"
                                MinWidth="160"
                                Background="#007991"
                                Foreground="White"
                                BorderThickness="0"
                                CornerRadius="4"
                                FontSize="11"
                                FontWeight="Medium"
                                Padding="14,0"
                                Margin="0,0,0,0"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Center">
                                <Border Background="#FFFFFF33"
                                        Width="14" Height="14"
                                        CornerRadius="7">
                                    <TextBlock Text="?" 
                                               FontSize="9"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Check Table Exists" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#00A8B5"/>
                                </Style>
                                <Style Selector="Button:pressed">
                                    <Setter Property="Background" Value="#006B7D"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                        
                        <!-- Table Check Result -->
                        <Border IsVisible="{Binding TableCheckMessage.Length}"
                                Background="#F3F4F6"
                                BorderBrush="#9CA3AF"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="6,5">
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Border Background="#6366F1"
                                        Width="12" Height="12"
                                        CornerRadius="6"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="âœ“" 
                                               FontSize="8"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{Binding TableCheckMessage}"
                                           FontSize="10"
                                           FontWeight="Medium"
                                           Foreground="#374151"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Step 3: Options Based on Table Existence (Full Width) -->
                <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10"
                        BoxShadow="0 1 2 0 #0000000A"
                        Margin="0,12,0,0"
                        IsEnabled="{Binding IsStep3Enabled}">
                    <Border.Styles>
                        <Style Selector="Border:not(:disabled)">
                            <Setter Property="Opacity" Value="1"/>
                        </Style>
                        <Style Selector="Border:disabled">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Style>
                    </Border.Styles>
                    <StackPanel Spacing="10">
                        <!-- Step Header -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="#6366F1"
                                    CornerRadius="6"
                                    Width="28"
                                    Height="28"
                                    VerticalAlignment="Top">
                                <TextBlock Text="3" 
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" Spacing="1">
                                <TextBlock Text="Configuration Options" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="#111827"/>
                                <TextBlock Text="Choose how to handle the destination table"
                                           FontSize="11"
                                           Foreground="#6B7280"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Option A: Table Exists - Truncate -->
                        <StackPanel IsVisible="{Binding ShowTruncateOption}" Spacing="6">
                            <Border Background="#FEF3C7" 
                                    BorderBrush="#FBBF24"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Padding="8,5">
                                <StackPanel Spacing="5">
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <Border Background="#F59E0B"
                                                Width="14" Height="14"
                                                CornerRadius="7">
                                            <TextBlock Text="!" 
                                                       FontSize="10"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="WARNING: Table Already Exists" 
                                                   FontSize="11" 
                                                   FontWeight="Bold" 
                                                   Foreground="#92400E"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock FontSize="10"
                                               Foreground="#78350F"
                                               TextWrapping="Wrap"
                                               LineHeight="13">
                                        <Run Text="The table "/><Run Text="{Binding DestinationTableName}"/><Run Text=" already exists in your database."/>
                                    </TextBlock>
                                    <TextBlock Text="âš  Truncating will permanently delete ALL existing data before loading new data!"
                                               FontSize="10"
                                               Foreground="#92400E"
                                               FontWeight="SemiBold"
                                               TextWrapping="Wrap"
                                               LineHeight="13"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="#FFFBF5"
                                    BorderBrush="#FED7AA"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Padding="6,4">
                                <CheckBox IsChecked="{Binding ShouldTruncate}"
                                          FontSize="10"
                                          FontWeight="Medium">
                                    <TextBlock Text="Yes, truncate the existing table before loading new data"
                                               FontSize="10"
                                               Foreground="#374151"
                                               TextWrapping="Wrap"/>
                                </CheckBox>
                            </Border>
                        </StackPanel>

                        <!-- Option B: Table Doesn't Exist - Create New -->
                        <StackPanel IsVisible="{Binding ShowCreateTableInfo}" Spacing="6">
                            <Border Background="#D1F2EB" 
                                    BorderBrush="#6EE7B7"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Padding="8,5">
                                <StackPanel Spacing="5">
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <Border Background="#10B981"
                                                Width="14" Height="14"
                                                CornerRadius="7">
                                            <TextBlock Text="i" 
                                                       FontSize="9"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="New Table Will Be Created" 
                                                   FontSize="11" 
                                                   FontWeight="Bold" 
                                                   Foreground="#065F46"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock FontSize="10"
                                               Foreground="#047857"
                                               TextWrapping="Wrap"
                                               LineHeight="13">
                                        <Run Text="The table "/><Run Text="{Binding DestinationTableName}"/><Run Text=" does not exist in your database."/>
                                    </TextBlock>
                                    <TextBlock Text="âœ“ A new table will be automatically created with the same structure as your Excel data (all columns as NVARCHAR(MAX))."
                                               FontSize="10"
                                               Foreground="#065F46"
                                               TextWrapping="Wrap"
                                               LineHeight="13"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="#F0FDF4"
                                    BorderBrush="#BBF7D0"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Padding="6,4">
                                <CheckBox IsChecked="{Binding CreateNewTable}"
                                          IsEnabled="False"
                                          FontSize="10"
                                          FontWeight="Medium">
                                    <TextBlock Text="Create new table based on Excel data structure"
                                               FontSize="10"
                                               Foreground="#374151"
                                               TextWrapping="Wrap"/>
                                </CheckBox>
                            </Border>
                        </StackPanel>
                        
                        <!-- Complete Button -->
                        <Button Command="{Binding Step3_CompleteCommand}"
                                HorizontalAlignment="Center"
                                Height="32"
                                MinWidth="200"
                                Background="#10B981"
                                Foreground="White"
                                BorderThickness="0"
                                CornerRadius="4"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Padding="20,0"
                                Margin="0,0,0,0"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Center">
                                <Border Background="#FFFFFF33"
                                        Width="14" Height="14"
                                        CornerRadius="7">
                                    <TextBlock Text="âœ“" 
                                               FontSize="9"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Complete Configuration" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#059669"/>
                                </Style>
                                <Style Selector="Button:pressed">
                                    <Setter Property="Background" Value="#065F46"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Action Buttons (Full Width) -->
                <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"
                            Orientation="Horizontal" 
                            Spacing="8"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0"
                            IsEnabled="{Binding ConfigurationComplete}">
                    <StackPanel.Styles>
                        <Style Selector="StackPanel:not(:disabled)">
                            <Setter Property="Opacity" Value="1"/>
                        </Style>
                        <Style Selector="StackPanel:disabled">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Style>
                    </StackPanel.Styles>
                    
                    <Button Command="{Binding SaveConfigurationCommand}"
                            Height="30"
                            Padding="16,0"
                            Background="#10B981"
                            Foreground="White"
                            BorderThickness="0"
                            CornerRadius="4"
                            FontSize="11"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <Border Background="#FFFFFF33"
                                    Width="14" Height="14"
                                    CornerRadius="7">
                                <TextBlock Text="ðŸ’¾" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Save Configuration" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#059669"/>
                            </Style>
                            <Style Selector="Button:pressed">
                                <Setter Property="Background" Value="#065F46"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                    
                    <Button Command="{Binding ResetWizardCommand}"
                            Height="30"
                            Padding="12,0"
                            Background="#FFFFFF"
                            Foreground="#374151"
                            BorderBrush="#D1D5DB"
                            BorderThickness="1"
                            CornerRadius="4"
                            FontSize="11"
                            FontWeight="Medium"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <Border Background="#F3F4F6"
                                    Width="14" Height="14"
                                    CornerRadius="7">
                                <TextBlock Text="â†»" FontSize="10" FontWeight="Bold" Foreground="#6B7280" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Reset Wizard" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#F9FAFB"/>
                                <Setter Property="BorderBrush" Value="#9CA3AF"/>
                            </Style>
                            <Style Selector="Button:pressed">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                    
                    <Button Command="{Binding LoadExistingConfigurationCommand}"
                            Height="30"
                            Padding="12,0"
                            Background="#FFFFFF"
                            Foreground="#374151"
                            BorderBrush="#D1D5DB"
                            BorderThickness="1"
                            CornerRadius="4"
                            FontSize="11"
                            FontWeight="Medium"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <Border Background="#F3F4F6"
                                    Width="14" Height="14"
                                    CornerRadius="7">
                                <TextBlock Text="ðŸ“" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Load Existing" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#F9FAFB"/>
                                <Setter Property="BorderBrush" Value="#9CA3AF"/>
                            </Style>
                            <Style Selector="Button:pressed">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                </StackPanel>

            </Grid>

            <!-- Configuration Log (Full Width Below) -->
            <Border Background="White"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12"
                    BoxShadow="0 1 2 0 #0000000A"
                    Margin="0,12,0,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="6" Margin="0,0,0,6">
                        <Border Background="#6366F1"
                                Width="20" Height="20"
                                CornerRadius="4">
                            <TextBlock Text="ðŸ“‹" 
                                       FontSize="10"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center" Spacing="0">
                            <TextBlock Text="Configuration Log" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"
                                       Foreground="#111827"/>
                            <TextBlock Text="Track configuration changes and actions"
                                       FontSize="10"
                                       Foreground="#6B7280"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <Border BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            CornerRadius="3"
                            Height="130"
                            Background="#FAFBFC">
                        <ScrollViewer Padding="6">
                            <ItemsControl ItemsSource="{Binding LogEntries}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="5,3"
                                                Margin="0,1"
                                                CornerRadius="3"
                                                Background="Transparent">
                                            <Border.Styles>
                                                <Style Selector="Border:pointerover">
                                                    <Setter Property="Background" Value="#F3F4F6"/>
                                                </Style>
                                            </Border.Styles>
                                            <Grid ColumnDefinitions="Auto,Auto,*">
                                                <Border Grid.Column="0"
                                                        Background="#6366F1"
                                                        Width="14" Height="14"
                                                        CornerRadius="7"
                                                        Margin="0,0,5,0"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Icon}"
                                                               FontSize="8"
                                                               Foreground="White"
                                                               FontWeight="Bold"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                                <Border Grid.Column="1"
                                                        Background="#E5E7EB"
                                                        CornerRadius="2"
                                                        Padding="4,1"
                                                        Margin="0,0,5,0">
                                                    <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm:ss'}"
                                                               FontSize="8"
                                                               FontFamily="Consolas,Monaco,monospace"
                                                               FontWeight="SemiBold"
                                                               Foreground="#6B7280"/>
                                                </Border>
                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding Message}"
                                                           FontSize="10"
                                                           Foreground="#1F2937"
                                                           TextWrapping="Wrap"
                                                           VerticalAlignment="Center"
                                                           LineHeight="12"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>

</UserControl>


