<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:UniversalExcelTool.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="950" d:DesignHeight="700"
             x:Class="UniversalExcelTool.UI.Views.DynamicTableConfigView"
             x:DataType="vm:DynamicTableConfigViewModel">

    <Design.DataContext>
        <vm:DynamicTableConfigViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,Auto,*" Margin="16">
        
        <!-- 1. Header Section -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="Table Configuration" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="#1F2937"/>
                <TextBlock Text="Configure and manage dynamic database tables" 
                           FontSize="12" 
                           Foreground="#6B7280"/>
            </StackPanel>
            <!-- Status Badge -->
            <Border Grid.Column="1" 
                    Background="#E0F2FE" 
                    BorderBrush="#93C5FD"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="10,4"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <TextBlock Text="âœ“" FontSize="10" FontWeight="Bold" Foreground="#0284C7" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusMessage}" FontSize="11" FontWeight="Medium" Foreground="#0369A1" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 2. Main Configuration Grid (3 Horizontal Cards) -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*,*" Margin="0,0,0,12">
            
            <!-- Card 1: Temporary Table -->
            <Border Grid.Column="0" Margin="0,0,6,0" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="12" BoxShadow="0 1 2 0 #0000000A">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                        <Border Background="#EEF2FF" Width="28" Height="28" CornerRadius="14">
                            <TextBlock Text="1" FontSize="14" FontWeight="Bold" Foreground="#4F46E5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Temporary Table" FontSize="13" FontWeight="SemiBold" Foreground="#111827"/>
                            <TextBlock Text="Staging table" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Input -->
                    <TextBox Grid.Row="1" Text="{Binding TempTableName}" Watermark="e.g., Temp_MyData" Height="32" CornerRadius="6" FontSize="12" VerticalContentAlignment="Center" Margin="0,0,0,8"/>
                    
                    <!-- Info Box -->
                    <Border Grid.Row="2" Margin="0,0,0,12" Background="#FFFBEB" BorderBrush="#FCD34D" BorderThickness="1" CornerRadius="6" Padding="8,6">
                        <TextBlock Text="Validates data before final destination" FontSize="11" Foreground="#92400E" TextWrapping="Wrap"/>
                    </Border>
                    
                    <!-- Button -->
                    <Button Grid.Row="3" Command="{Binding Step1_NextCommand}" Content="Next Step" HorizontalAlignment="Stretch" Height="32" Background="#007991" Foreground="White" CornerRadius="6" FontSize="12" FontWeight="Medium"/>
                </Grid>
            </Border>

            <!-- Card 2: Destination Table -->
            <Border Grid.Column="1" Margin="6,0,6,0" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="12" BoxShadow="0 1 2 0 #0000000A" IsEnabled="{Binding IsStep2Enabled}">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                        <Border Background="#EEF2FF" Width="28" Height="28" CornerRadius="14">
                            <TextBlock Text="2" FontSize="14" FontWeight="Bold" Foreground="#4F46E5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Destination Table" FontSize="13" FontWeight="SemiBold" Foreground="#111827"/>
                            <TextBlock Text="Final storage" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Input -->
                    <TextBox Grid.Row="1" Text="{Binding DestinationTableName}" Watermark="e.g., MyDataTable" Height="32" CornerRadius="6" FontSize="12" VerticalContentAlignment="Center" Margin="0,0,0,8"/>
                    
                    <!-- Check Result -->
                    <Border Grid.Row="2" Margin="0,0,0,12" IsVisible="{Binding TableCheckMessage.Length}" Background="#F0FDF4" BorderBrush="#86EFAC" BorderThickness="1" CornerRadius="6" Padding="8,6" MinHeight="30">
                        <TextBlock Text="{Binding TableCheckMessage}" FontSize="11" Foreground="#166534" TextWrapping="Wrap"/>
                    </Border>
                    <!-- Spacer if hidden to align buttons -->
                    <Border Grid.Row="2" Margin="0,0,0,12" IsVisible="{Binding !TableCheckMessage.Length}" Height="30" Background="Transparent"/>

                    <!-- Button -->
                    <Button Grid.Row="3" Command="{Binding Step2_CheckTableCommand}" Content="Check Table" HorizontalAlignment="Stretch" Height="32" Background="#007991" Foreground="White" CornerRadius="6" FontSize="12" FontWeight="Medium"/>
                </Grid>
            </Border>

            <!-- Card 3: Configuration Options -->
            <Border Grid.Column="2" Margin="6,0,0,0" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="12" BoxShadow="0 1 2 0 #0000000A" IsEnabled="{Binding IsStep3Enabled}">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                        <Border Background="#EEF2FF" Width="28" Height="28" CornerRadius="14">
                            <TextBlock Text="3" FontSize="14" FontWeight="Bold" Foreground="#4F46E5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Options" FontSize="13" FontWeight="SemiBold" Foreground="#111827"/>
                            <TextBlock Text="Handle destination" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Content Area (Flexible) -->
                    <StackPanel Grid.Row="1" Spacing="8" VerticalAlignment="Top">
                        <!-- Truncate Option -->
                        <StackPanel IsVisible="{Binding ShowTruncateOption}" Spacing="4">
                            <Border Background="#FEF2F2" BorderBrush="#FECACA" BorderThickness="1" CornerRadius="6" Padding="8">
                                <TextBlock Text="Table exists. Truncate?" FontSize="11" Foreground="#991B1B" FontWeight="Bold"/>
                            </Border>
                            <CheckBox IsChecked="{Binding ShouldTruncate}" Content="Yes, truncate" FontSize="11"/>
                        </StackPanel>

                        <!-- Create New Option -->
                        <StackPanel IsVisible="{Binding ShowCreateTableInfo}" Spacing="4">
                             <Border Background="#ECFDF5" BorderBrush="#A7F3D0" BorderThickness="1" CornerRadius="6" Padding="8">
                                <TextBlock Text="New table will be created." FontSize="11" Foreground="#065F46" FontWeight="Bold"/>
                            </Border>
                            <CheckBox IsChecked="{Binding CreateNewTable}" IsEnabled="False" Content="Create new table" FontSize="11"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Button -->
                    <Button Grid.Row="2" Command="{Binding Step3_CompleteCommand}" Content="Complete" HorizontalAlignment="Stretch" Height="32" Background="#10B981" Foreground="White" CornerRadius="6" FontSize="12" FontWeight="SemiBold" Margin="0,12,0,0"/>
                </Grid>
            </Border>
        </Grid>

        <!-- 3. Global Actions (Between Grids) -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Margin="0,0,0,12" IsEnabled="{Binding ConfigurationComplete}">
            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" Grid.Column="1">
                <Button Command="{Binding ResetWizardCommand}" Content="Reset" Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Foreground="#374151" CornerRadius="6" Padding="12,6" FontSize="11"/>
                <Button Command="{Binding LoadExistingConfigurationCommand}" Content="Load Existing" Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Foreground="#374151" CornerRadius="6" Padding="12,6" FontSize="11"/>
                <Button Command="{Binding SaveConfigurationCommand}" Content="Save Configuration" Background="#10B981" Foreground="White" CornerRadius="6" FontWeight="SemiBold" Padding="16,6" FontSize="11"/>
            </StackPanel>
        </Grid>

        <!-- 4. Log Section (Second Grid) -->
        <Border Grid.Row="3" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" BoxShadow="0 1 2 0 #0000000A">
            <Grid RowDefinitions="Auto,*">
                <Border Grid.Row="0" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="12,8" Background="#F9FAFB" CornerRadius="8,8,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="ðŸ“‹" FontSize="12" VerticalAlignment="Center"/>
                        <TextBlock Text="Configuration Log" FontWeight="SemiBold" FontSize="12" Foreground="#374151" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <ScrollViewer Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding LogEntries}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12,6" BorderBrush="#F3F4F6" BorderThickness="0,0,0,1">
                                    <Grid ColumnDefinitions="24,60,*">
                                        <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" FontSize="11" FontFamily="Cascadia Code, Consolas, monospace" Foreground="#6B7280" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Message}" FontSize="11" Foreground="#374151" TextWrapping="Wrap" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

    </Grid>

</UserControl>


